<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.joinBatch">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="800.0">
         <top>
            <ToolBar prefHeight="40.0" prefWidth="702.0" BorderPane.alignment="CENTER">
               <items>
                  <ImageView fitHeight="31.0" fitWidth="149.0" pickOnBounds="true" preserveRatio="true" translateX="340.0">
                     <image>
                        <Image url="@images/top.png" />
                     </image>
                  </ImageView>
               </items>
            </ToolBar>
         </top>
         <center>
            <Label fx:id="myLabel" prefHeight="47.0" prefWidth="233.0" text="Select the batch" textFill="#030303" translateY="-200.0" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Microsoft Tai Le" size="33.0" />
               </font>
            </Label>
         </center>
         <bottom>
            <Button fx:id="addButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="85.0" style="-fx-background-color: #000000;" text="Join" textFill="#fcfcfc" translateY="-100.0" BorderPane.alignment="TOP_CENTER">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </bottom>
      </BorderPane>
      <Button fx:id="backButton" layoutX="330.0" layoutY="-12.0" mnemonicParsing="false" onAction="#userLogOut" style="-fx-background-color: #000000;" text="&lt;-" textFill="WHITE" translateX="-320.0" translateY="20.0" />
      <Button layoutX="340.0" layoutY="-12.0" mnemonicParsing="false" onAction="#exit" style="-fx-background-color: #FF0000;" text=" X " textFill="WHITE" translateX="420.0" translateY="20.0" />
      <ListView fx:id="myListView" layoutX="-17.0" layoutY="-59.0" prefHeight="316.0" prefWidth="233.0" translateX="300.0" translateY="200.0" />
   </children>
</AnchorPane>
